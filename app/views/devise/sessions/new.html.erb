
        <div id="mainContainer" style="margin-left: auto; margin-right: auto;">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <form id="loginForm" onsubmit="checkLogin(event)">
                <i class="bi bi-boxes" id="loginLogo" style="font-size: 60px;"></i>
                <div id="loginTitle" style="text-align:center">Sign in and start managing your candidates!</div>
                <div style="margin-left: auto; margin-right: auto;">
                        <div class="field loginInput" id="loginUserInput">
                      <%= image_tag("loginUser.png", :alt => "img") %>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
                    </div>

                        <div class="field loginInput" id="loginPassInput">
                          <%= image_tag("loginPass.png", :alt => "img") %>
                          <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password' %>
                        </div>

                        <% if devise_mapping.rememberable? %>
                          <div class="field"id="loginUserOptions">
                            <div class="form-check form-check-inline">
                            <%= f.check_box :remember_me, class:"form-check-input", id:"cbRemenberMe",value:"true"%>
                            <%= f.label :remember_me %>
                            </div>
                          </div>
                        <% end %>

                          <div class="actions" style="margin-right: auto; margin-left: auto; width: 50%;">
                            <%= f.submit "Log in", class:"btn btn-primary", id:"loginBtn", value:"Login"%>
                          </div>
                </div>
            </form>
              <% end %>
  <%= render "devise/shared/links" %>
        </div>
            <div id="loginWavesContainer">
                    <%= image_tag("loginWave1.png", :alt => "img", :class => "loginWave") %>
                    <%= image_tag("loginWave2.png", :alt => "img", :class => "loginWave") %>
            </div>
